    "php": ">=8.4",
    "php-di/php-di": "^7.0",
    "moneyphp/money": "^4.6",
    "lumisys/bcmath_compat": "^1.0",
    "webmozart/assert": "^1.11"
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
